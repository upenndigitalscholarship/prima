    <div class="container" style="justify-content:center">

    <div class="buttons" style="justify-content:left">

{% if lesson_pdf or lesson_doc %}<div class="container" style="justify-content:left">
<span style="font-size:0.9rem">Download lesson:</span>

{% if lesson_pdf %}

  <a class="download" target="_blank" onclick="window.location.href='{{ lesson_pdf }}';">
                        {% if page.lang == 'it' %}Scarica in formato PDF{% else %}Lesson PDF{% endif %}
                    </a>

