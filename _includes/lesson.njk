{% if page.lang == 'it' %}
<a class="breadcrumb" href="{{ "/lezioni/" | locale_url }}">
{% else %}
<a class="breadcrumb" href="{{ "/lessons/" | locale_url }}">
{% endif %}
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
    <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
  </svg>
  {% if page.lang == 'it' %}Indietro{% else %}Back{% endif %}
  </a>
<h3 class="lesson-title">{{ clip_name }}</h3>


<div class="container lesson-metadata-box" style="row-gap:20px">
  <div id="left-box">
  <div>
    
    </div>

    <div class="container" style="justify-content:center">
    <div class="container buttons">
{% if lesson_pdf %}

  <button class="button meta-button" target="_blank" onclick="window.location.href='{{ lesson_pdf }}';">
                        {% if page.lang == 'it' %}Scarica in formato pdf{% else %}Download as pdf{% endif %}
                    </button>

{% endif %}

{% if lesson_doc %}
  <button class="button meta-button" target="_blank" onclick="window.location.href='{{ lesson_doc }}';">
                        {% if page.lang == 'it' %}Scarica in formato docx{% else %}Download as docx{% endif %}
                    </button>
{% endif %}

{% if transcript_doc %}
  <button class="button meta-button" target="_blank" onclick="window.location.href='{{ transcript_doc }}';">
                        
                        {% if page.lang == 'it' %}Trascrizione come docx{% else %}Transcription as docx{% endif %}
{% endif %}
  
{% if transcript_pdf %}
  <button class="button meta-button" target="_blank" onclick="window.location.href='{{ transcript_pdf }}';">
                        {% if page.lang == 'it' %}Trascrizione come pdf{% else %}Transcription as pdf{% endif %}
                    </button>
{% endif %}

{% if solution_doc %}
  <button class="button meta-button" target="_blank" onclick="window.location.href='{{ solution_doc }}';">
                        {% if page.lang == 'it' %}Soluzione come docx{% else %}Solution as docx{% endif %}
                    </button>
{% endif %}
  
{% if solution_pdf %}
  <button class="button meta-button" target="_blank" onclick="window.location.href='{{ solution_pdf }}';">
                        {% if page.lang == 'it' %}Soluzione come pdf{% else %}Solution as pdf{% endif %}
                    </button>
{% endif %}
{% if video %}

<button class="button meta-button" target="_blank" onclick="window.open('{{ video }}', '_blank')">
      {% if page.lang == 'it' %}Apri il video in una nuova scheda{% else %}Open video in new tab{% endif %}

                    </button>
{% endif %}
</div>
<div class="container lesson-metadata-box">
  <div id="left-box">
  <div>
    {% if video %}
    {{ citation_information  | markdownify | safe }}
    {% endif %}
    
        </div>

    </div>

  
  <div id="right-box" 
    <div id="video_embed">
      {% if video_embed %}
      {{ video_embed | safe }}
      {% endif %}
    </div>
  </div>
</div>
  </div>


{{ content | safe }}
{% if text %}
  <embed style="margin-left: 10%;" src="{{ text }}" width="80%" height="600px" /> 
{% endif %}

{% if lesson_pdf %}
  <embed style="margin-left: 10%;" src="{{ lesson_pdf }}" width="80%" height="600px" /> 
{% endif %}


