        window.addEventListener('DOMContentLoaded', (event) => {
            new PagefindUI({
                element: "#search",
                translations: {
                    "placeholder": "Cerca",
                    "clear_search": "Cancella la cronologia",
                    "load_more": "Mostra pi√π risultati",
                    "search_label": "Cerca nel sito",
                    "filters_label": "Filtri di ricerca",
